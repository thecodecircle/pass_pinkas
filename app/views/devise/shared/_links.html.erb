<%- if controller_name != 'sessions' %>
  <div class="flex flex-wrap"><%= link_to I18n.t("user.sign_in"), new_session_path(resource_name, locale: params[:locale]), class: "link link-grey block py-2" %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "הרשמה", new_registration_path(resource_name), class: "link link-grey block py-2" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "שכחת את הסיסמה?", new_password_path(resource_name), class: "link link-grey block py-2" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "link link-grey block py-2" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "link link-grey block py-2" %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "link link-grey block py-2" %>
  <% end -%>
<% end -%>
