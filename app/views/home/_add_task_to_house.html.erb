<h1 class="text-xl mr-3"><%= house.name %></h1>
	<div class="rounded-lg shadow px-4 py-4">
		<% @random_tasks.each do |task| %>
		<%= render "task", { task: task, status: "general", kid: 234567, house: house.id } %>
		<% end %>
		<button class="open-modal bg-cta hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
			<%= link_to "משימה חדשה", new_task_path(private_house_id: house.id) %>
		</button>
	</div>
</div>
