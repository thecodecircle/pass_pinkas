<%= render "sign_up_links" %>
<% @houses.each_with_index do |house, index|%>
	<h1 class="w-full text-2xl flex justify-between mt-2">
		<span class="mx-3 text-shmutz-blue brand"><%= house.name %></span>
		<!-- <a href="<%= root_url %>users/sign_up?t=jbhl&i=<%= house.id %>"></a> -->
		<br>
		<span class="font-bold w-1/3"><span class=" text-white bg-shmutz-blue px-2 rounded-lg"> <%= house.score %> <span class="text-xl font-normal">נק'</span></span></span>
		<div class="float-left w-1/5 flex justify-end ml-6">
			<button id="button-<%= house.id %>" value="<%= house.id %>" class="text-white open-modal w-12 h-12 rounded-full bg-red-400 self-end move-down flex justify-center" type="button" name="button"><%= image_tag "plus.png", size:"25" %> </button>
		</div>
	</h1>
	<div class="rounded-lg bg-gray-100 shadow px-4 py-4 pb-5">
			<h1 class="text-xl text-shmutz-blue brand">משימות לאישור</h1>
			<% @users_with_unapproved_tasks.each do |task| %>
				<% task[1].each do |kid_id| %>
					<% kid = User.find(kid_id) %>
				<% if house.users.include?(kid) %>
					<%= render "task", { task: Task.find(task[0]), status: "to_approve", kid: kid_id, house: house.id } %>
				<% end %>
				<% end %>
			<% end %>
			<h1 class="text-xl mt-5 text-shmutz-blue brand">חניכים וחניכות</h1>
		<% house.users.each do |kid| %>
			<div class="container w-full py-1 shadow my-2 rounded-lg bg-blue-100">
				<div class="w-full flex justify-between">
					<span class="name mx-3 text-lg"><%= kid.name %></span>
					<span class="mx-3 open_users_tasks"><i class="gg-push-chevron-down" ></i></span>
				</div>
				<div class="mx-3 users_tasks hidden mt-2">
					<strong>משימות</strong>
					<ul>
						<% kid.my_tasks.in_progress.each do |my_task| %>
							<li><%= my_task.task.name %></li>
						<% end %>
					</ul>
				</div>
			</div>
		<% end %>
		<h1 class="text-xl mt-5 text-shmutz-blue brand">משימות שחניכות הציעו</h1>
		<div class="">
			<% Task.where(status: 0, publicity: 0).where(suggested_id: house.users).each do |task| %>
				<%= render "task", { task: task, status: "suggested", kid: task.suggested_id, house: house.id } %>
			<% end %>
		</div>
		<div class="sign-ups-div">
			<div class="open-house-sign-ups flex justify-between">
				<button class=" bg-shmutz-blue text-white my-1 px-1 rounded-lg" type="button" name="button">קישורי הרשמה</button>
				<button class=" bg-shmutz-blue text-white my-1 px-1 rounded-lg" type="button" name="button"><i class="gg-push-chevron-down"></i> </button>
			</div>
			<div class="house-sign-ups hidden">
				<button  class="text-md sign_up_kid bg-shmutz-blue text-white my-1 px-1 rounded-lg" value="<%= house.id %>" type="button" name="button">הרשמת חניך ל<%= house.name %></button> <br>
				<button  class="text-md sign_up_another_house bg-shmutz-blue text-white my-1 px-1 rounded-lg" value="<%= house.id %>" type="button" name="button">הרשמת מדריכה נוספת ל<%= house.name %></button> <br>
				<button  class="text-md sign_up_house_kid text-right bg-shmutz-blue text-white my-1 px-1 rounded-lg"   value="<%= house.id %>" type="button" name="button">הרשמת חניך שהוא מדריך רשום במערכת ל<%= house.name %></button>
			</div>
		</div>
	</div>

<script type="text/javascript">
	$(document).ready(function() {
		$("#button-<%= house.id %>").click(function(event) {
			$('.modal-content').html("<%= j (render partial: 'add_task_to_house', locals: { general_tasks: @general_tasks, house: house }) %>")
