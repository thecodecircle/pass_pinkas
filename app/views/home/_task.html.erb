<% difficulties = {
		easy: "קל - 10",
		medium: "בינוני - 50",
		hard: "קשה - 100",
		impossible: "כמעט בלתי אפשרי - 300"

	<% ages = {
		toddler: "קטנטנים",
		small: "ילדים קטנים",
		big: "ילדים גדולים",
		grownup: "מבוגרים"
		} %>

	<% case status %>
	<% when "in_progress" %>
	<div class="task relative m-3">
		<div class="task-in-progress h-32 w-32  bg-task-green  rounded-full flex flex-col relative open-task-description">
			<div class="flex justify-center items-center h-full text-center">
				<span class="mx-3 text-lg "><%= task.name %></span>
			</div>
			<span class="star w-16 h-16 star-transform absolute bottom-0 right-0 justify-center flex items-center"><%= task.score %></span>
		</div>
		<div style="display: flex" class="description w-screen h-screen fixed top-0 left-0 abg-black-opacity-50 z-50 flex items-start justify-center pt-10 close-task-description">
				<div class="description-body w-64  h-64  bg-white rounded-lg  shadow-lg sticky ">
					<div class="flex flex-col justify-between w-full rounded-lg h-full p-3" >
						<div class="flex  justify-between w-full h-10">
							<span class=" "><%= task.name %></span>
							<span class=" "><%= difficulties[task.difficulty.to_sym] %></span>
						</div>
						<div class="flex w-full h-10 text-xl items-center">
							<span><%= task.description %></span>
						</div>
						<div class="flex w-full h-10 justify-between items-end">
							<span><%= ages[task.age.to_sym] %></span>
							<span class="  flex justify-center">
								<%= link_to change_progress_path(task_id: task.id, remove: "remove", house: house), class: "ml-2" ,data: {confirm: "להסיר את המשימה?"} do %>
								<span class=""><i class="gg-close text-red-500" ></i></span>
								<% end %>
								<%= link_to change_progress_path(task_id: task.id, house: house), data: {confirm: "סיימתם את המשימה?"} do %>
								<span class=""><i class="gg-check-o" ></i></span>
								<% end %>
							</span>

						</div>
					</div>
				</div>


		</div>
	</div>


	<% when "done" %>
	<div class="task relative m-3">
		<div class="task-in-progress h-32 w-32  bg-gray-400 line-through  rounded-full flex flex-col relative ">
			<div class="flex justify-center items-center h-full text-center">
				<span class="mx-3 text-lg "><%= task.name %></span>
			</div>
			<span class="star w-16 h-16 star-transform absolute bottom-0 right-0 justify-center flex items-center"><%= task.score %></span>
		</div>
	</div>


<% end %>
